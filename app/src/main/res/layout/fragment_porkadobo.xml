<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:fillViewport="true"
    tools:context=".bottom_fragments.PorkAdobo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:src="@drawable/adobo"
            android:scaleType="centerCrop"
            android:contentDescription="porkadobo"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/orange"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="-30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adobo sa Gata (Good for 3-6 People)"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_margin="20dp"/>

            <View
                android:layout_width="280dp"
                android:layout_height="4dp"
                android:background="@color/gray"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="50dp"/>

            <TextView
                android:id="@+id/tv_adobosagata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:padding="10sp"
                android:text="@string/bl_adobosagata"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

</LinearLayout>